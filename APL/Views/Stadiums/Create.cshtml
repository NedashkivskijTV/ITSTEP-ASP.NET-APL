@model APL.Models.Stadium

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Add Stadium</h1>

@*<h4 class="text-danger">Stadium</h4>*@
<hr />
<div class="row">
    <div class="col-md-4 text-white">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="StadiumName" class="control-label"></label>
                <span asp-validation-for="StadiumName" class="text-danger bg-warning"></span>
                <input asp-for="StadiumName" class="form-control" placeholder="Enter Snadium Name"/>
            </div>
            <div class="form-group">
                <label asp-for="StadiumDescription" class="control-label"></label>
                @*<input asp-for="StadiumDescription" class="form-control" />*@
                <span asp-validation-for="StadiumDescription" class="text-danger bg-warning"></span>
                <textarea asp-for="StadiumDescription" class="form-control" rows="10" id="stadiumDescription" placeholder="Enter a few words of description"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="TownId" class="control-label"></label>
                <select asp-for="TownId" class ="form-control" asp-items="ViewBag.TownId">
                    <option>Select town</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="ADD STADIUM" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @*<a asp-action="Index">Back to List</a>*@
    <a asp-action="Index" class="btn btn-danger">STADIUMS LIST</a>
    <a asp-action="Index" asp-controller="Clubs" class="btn btn-danger">APL CLUBS</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
