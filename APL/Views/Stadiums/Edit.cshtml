@model APL.Models.Stadium

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Edit Stadium info</h1>

@*<h4>Stadium</h4>*@
<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StadiumId" />
            <div class="form-group">
                <label asp-for="StadiumName" class="control-label text-white"></label>
                <input asp-for="StadiumName" class="form-control" />
                <span asp-validation-for="StadiumName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="StadiumDescription" class="control-label text-white"></label>
                @*<input asp-for="StadiumDescription" class="form-control" />*@
                <textarea asp-for="StadiumDescription" class="form-control" rows="10" id="stadiumDescription" placeholder="Enter a few words of description"></textarea>
                <span asp-validation-for="StadiumDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TownId" class="control-label text-white"></label>
                <select asp-for="TownId" class="form-control" asp-items="ViewBag.TownId"></select>
                <span asp-validation-for="TownId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">STADIUMS LIST</a>
    <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.StadiumId">STADIUM INFO</a>
    <a asp-action="Index" asp-controller="Clubs" class="btn btn-danger">APL CLUBS</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
