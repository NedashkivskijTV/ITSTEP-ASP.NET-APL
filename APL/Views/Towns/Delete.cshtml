@model APL.Models.Town

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete this?</h3>
<div>
    <h4 class="text-white">City</h4>
    <hr />
    <dl class="row bg-white">
        <dt class = "col-sm-2 text-danger"">
            @Html.DisplayNameFor(model => model.TownName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TownName)
        </dd>
        <dt class = "col-sm-2 text-danger"">
            @Html.DisplayNameFor(model => model.TownDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TownDescription)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="TownId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.TownId">CITY INFO</a> |
        <a asp-action="Index" class="btn btn-danger">CITIES LIST</a>
    </form>
</div>
