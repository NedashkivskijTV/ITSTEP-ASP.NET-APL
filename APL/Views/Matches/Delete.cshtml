@model APL.Models.Match

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete information about this match?</h3>
<div>
    @*<h4>Match</h4>*@
    <hr />
    <dl class="row bg-white">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchDate)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.MatchDate)*@
            @Model.MatchDate.ToShortDateString()
        </dd>
        <dt class = "col-sm-2">
            @*@Html.DisplayNameFor(model => model.MatchDate)*@
            Match Time
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.MatchDate)*@
            @Model.MatchDate.ToShortTimeString()
        </dd>
        <dt class = "col-sm-2">
            <hr />
            @Html.DisplayNameFor(model => model.HomeClubId)
        </dt>
        <dd class="col-sm-10">
            <hr />
            @*@Html.DisplayFor(model => model.HomeClubId)*@
            <span>
                @ViewBag.homeClub
            </span>
            <span class="float-md-none">
                @if (!String.IsNullOrEmpty(@ViewBag.homeClubCrest))
                {
                    <img src="@ViewBag.homeClubCrest" alt="Club crest" style="width: 100%; max-width: 70px; display: block;" data-holder-rendered="true" />
                }
                else
                {
                    <img src="/img/APL_2.png" alt="Club crest" style="width: 100%; max-width: 150px; display: block;" data-holder-rendered="true" />
                }
            </span>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AwayClubId)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.AwayClubId)*@
            <span>
                @ViewBag.awayClub
            </span>
            <span class="float-md-none">
                @if (!String.IsNullOrEmpty(@ViewBag.awayClubCrest))
                {
                    <img src="@ViewBag.awayClubCrest" alt="Club crest" style="width: 100%; max-width: 70px; display: block;" data-holder-rendered="true" />
                }
                else
                {
                    <img src="/img/APL_2.png" alt="Club crest" style="width: 100%; max-width: 150px; display: block;" data-holder-rendered="true" />
                }
            </span>
        </dd>
        <dt class = "col-sm-2">
            <hr />
            @Html.DisplayNameFor(model => model.Town)
        </dt>
        <dd class = "col-sm-10">
            <hr />
            @Html.DisplayFor(model => model.Town.TownName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Stadium)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Stadium.StadiumName)
        </dd class>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchResult)
        </dt>
        <dd class = "col-sm-10">
            <h2>@Html.DisplayFor(model => model.MatchResult)</h2>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MatchDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MatchIsOver)
        </dt>
        <dd class = "col-sm-10">
            @*@Html.DisplayFor(model => model.MatchIsOver)*@
            @{ 
                if(Model.MatchIsOver)
                {
                    <h5>Match Over</h5>
                }
                else
                {
                    <h5>Match not played</h5>
                }
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="MatchId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.MatchId">MATCH INFO</a> |
        <a asp-action="Index" class="btn btn-danger">MATCHES LIST</a>
    </form>
</div>
