@model APL.Models.Coach

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Delete</h1>

<h3 class="text-white">Are you sure you want to delete this info?</h3>
<div>
    @*<h4 class="text-white">Coach</h4>
    <hr />*@
    <hr />
    @*<h4 class="text-white">Coach</h4>*@
    <h4 class="text-white">@Model.CoachFullName</h4>
    <p>
        @if (!String.IsNullOrEmpty(@Model.CoachPhoto))
            {
                <img src="@Html.DisplayFor(modelItem => Model.CoachPhoto)" alt="Coach photo" style="width: 100%; max-width: 250px; display: block;" data-holder-rendered="true" />
            }
            else
            {
                <img src="/img/coach.png" alt="Coach photo" style="width: 100%; max-width: 250px; display: block;" data-holder-rendered="true" />
            }
    </p>

    <dl class="row bg-white">
        <dt class="col-sm-2 text-danger">
            @Html.DisplayNameFor(model => model.CoachSurname)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoachSurname)
        </dd>
        <dt class="col-sm-2 text-danger">
            @Html.DisplayNameFor(model => model.CoachName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoachName)
        </dd>
        <dt class="col-sm-2 text-danger">
            @Html.DisplayNameFor(model => model.CoachPatronymic)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoachPatronymic)
        </dd>
        <dt class="col-sm-2 text-danger">
            @Html.DisplayNameFor(model => model.CoachBirthday)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.CoachBirthday)*@
            @Model.CoachBirthday.ToShortDateString()
        </dd>
        <dt class="col-sm-2 text-danger">
            @Html.DisplayNameFor(model => model.CoachDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoachDescription)
        </dd>
        @*<dt class="col-sm-2 text-danger">
            @Html.DisplayNameFor(model => model.CoachPhoto)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CoachPhoto)
        </dd>*@
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="CoachId" />
        <input type="submit" value="Delete" class="btn btn-outline-danger" /> |
        <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.CoachId">COACH INFO</a> |
        <a asp-action="Index" class="btn btn-danger">COACHES LIST</a>
    </form>
</div>
