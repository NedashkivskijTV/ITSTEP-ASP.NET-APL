@model APL.Models.News

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Create News</h1>

@*<h4>News</h4>*@
<hr />
<div class="row">
    <div class="col-md-4 text-white">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label"></label>
                <input asp-for="NewsTitle" class="form-control" placeholder="Enter the news title"/>
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsText" class="control-label"></label>
                @*<input asp-for="NewsText" class="form-control" placeholder="Enter the news text" />*@
                <textarea asp-for="NewsText" cols="70" rows="10" class="form-control" id="newsText" placeholder="Enter the news text"></textarea>
                <span asp-validation-for="NewsText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsAuthor" class="control-label"></label>
                <input asp-for="NewsAuthor" class="form-control" placeholder="Enter the news author"/>
                <span asp-validation-for="NewsAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage" class="control-label"></label>
                <input asp-for="NewsImage" class="form-control" placeholder="Enter photo link"/>
                <span asp-validation-for="NewsImage" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="NewsCreationDate" class="control-label"></label>
                <input asp-for="NewsCreationDate" class="form-control" />
                <span asp-validation-for="NewsCreationDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Create News" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">Back to News List</a>
    <a asp-action="Index" asp-controller="Clubs" class="btn btn-danger">APL CLUBS</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
