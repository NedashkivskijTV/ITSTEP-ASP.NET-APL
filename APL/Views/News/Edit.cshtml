@model APL.Models.News

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">EDIT NEWS</h1>

@*<h4>News</h4>*@
<p>
    @if (!String.IsNullOrEmpty(@Model.NewsImage))
    {
        <img src="@Html.DisplayFor(modelItem => Model.NewsImage)" alt="Coach photo" style="width: 100%; max-width: 250px; display: block;" data-holder-rendered="true" />
    }
    else
    {
        <img src="/img/APL_2.png" alt="Coach photo" style="width: 100%; max-width: 250px; display: block;" data-holder-rendered="true" />
    }
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="NewsId" />
            <div class="form-group">
                <label asp-for="NewsTitle" class="control-label text-white"></label>
                <input asp-for="NewsTitle" class="form-control" />
                <span asp-validation-for="NewsTitle" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsText" class="control-label text-white"></label>
                @*<input asp-for="NewsText" class="form-control" />*@
                <textarea asp-for="NewsText" cols="70" rows="10" class="form-control" id="newsText" placeholder="Enter the news text"></textarea>
                <span asp-validation-for="NewsText" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsAuthor" class="control-label text-white"></label>
                <input asp-for="NewsAuthor" class="form-control" />
                <span asp-validation-for="NewsAuthor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NewsImage" class="control-label text-white"></label>
                <input asp-for="NewsImage" class="form-control" />
                <span asp-validation-for="NewsImage" class="text-danger"></span>
            </div>
            @*<div class="form-group">
                <label asp-for="NewsCreationDate" class="control-label text-white"></label>
                <input asp-for="NewsCreationDate" class="form-control" />
                <span asp-validation-for="NewsCreationDate" class="text-danger"></span>
            </div>*@
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">NEWS LIST</a>
    <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.NewsId">NEWS DETAILS</a>
    <a asp-action="Index" asp-controller="Clubs" class="btn btn-danger">APL CLUBS</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
