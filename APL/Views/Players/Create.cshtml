@model APL.Models.Player

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-danger">Add Player</h1>

@*<h4>Player</h4>*@
<hr />
<div class="row">
    <div class="col-md-4 text-white">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label"></label>
                <input asp-for="PlayerName" class="form-control" placeholder="Enter player fullname"/>
                <span asp-validation-for="PlayerName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerPhoto" class="control-label"></label>
                <input asp-for="PlayerPhoto" class="form-control" placeholder="Enter a link to the player's photo"/>
                <span asp-validation-for="PlayerPhoto" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerNumber" class="control-label"></label>
                <input asp-for="PlayerNumber" class="form-control" min="1" placeholder="Enter player number"/>
                <span asp-validation-for="PlayerNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerPosition" class="control-label"></label>
                <input asp-for="PlayerPosition" class="form-control" placeholder="Enter player position"/>
                <span asp-validation-for="PlayerPosition" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PlayerDescription" class="control-label"></label>
                @*<input asp-for="PlayerDescription" class="form-control" />*@
                <span asp-validation-for="PlayerDescription" class="text-danger"></span>
                <textarea asp-for="PlayerDescription" class="form-control" id="playerDescription" rows="7" placeholder="Enter a few words of description"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ClubId" class="control-label"></label>
                <span asp-validation-for="ClubId" class="text-danger"></span>
                <select asp-for="ClubId" class="form-control" asp-items="@ViewBag.clubs" id="ClubId">
                    <option>SELECT CLUB</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="ADD PLAYER" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">PLAYER LIST</a>
    <a asp-action="Index" asp-controller="Clubs" class="btn btn-danger">APL CLUBS</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
