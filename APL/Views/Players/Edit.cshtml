@model APL.Models.Player

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white">Edit player info</h1>

@*<h4>Player</h4>*@
<h4 class="text-white">@Model.PlayerName</h4>
<p>
    @if (!String.IsNullOrEmpty(@Model.PlayerPhoto))
    {
        <img src="@Html.DisplayFor(modelItem => Model.PlayerPhoto)" alt="Coach photo" style="width: 100%; max-width: 250px; display: block;" data-holder-rendered="true" />
    }
    else
    {
        <img src="/img/APL_2.png" alt="Coach photo" style="width: 100%; max-width: 250px; display: block;" data-holder-rendered="true" />
    }
</p>

<hr />
<div class="row">
    <div class="col-md-5">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="PlayerId" />
            <div class="form-group">
                <label asp-for="PlayerName" class="control-label text-white"></label>
                <span asp-validation-for="PlayerName" class="text-danger bg-warning"></span>
                <input asp-for="PlayerName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlayerPhoto" class="control-label text-white"></label>
                <span asp-validation-for="PlayerPhoto" class="text-danger bg-warning"></span>
                <input asp-for="PlayerPhoto" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlayerNumber" class="control-label text-white"></label>
                <span asp-validation-for="PlayerNumber" class="text-danger bg-warning"></span>
                <input asp-for="PlayerNumber" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlayerPosition" class="control-label text-white"></label>
                <span asp-validation-for="PlayerPosition" class="text-danger bg-warning"></span>
                <input asp-for="PlayerPosition" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="PlayerDescription" class="control-label text-white"></label>
                @*<input asp-for="PlayerDescription" class="form-control" />*@
                <span asp-validation-for="PlayerDescription" class="text-danger bg-warning"></span>
                <textarea asp-for="PlayerDescription" cols="70" rows="7" class="form-control" id="playerDescription"></textarea>
            </div>
            <div class="form-group">
                <label asp-for="ClubId" class="control-label text-white"></label>
                <span asp-validation-for="ClubId" class="text-danger bg-warning"></span>
                <select asp-for="ClubId" class="form-control" asp-items="@ViewBag.ClubId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="SAVE" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-danger">PLAYERS LIST</a>
    <a class="btn btn-danger" asp-action="Details" asp-route-id="@Model.PlayerId">PLAYER INFO</a>
    <a asp-action="Index" asp-controller="Clubs" class="btn btn-danger">APL CLUBS</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
